<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/progresss"
    tools:context="com.example.codetribe.reportcard.MainActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:visibility="invisible" />



    <ImageView
        android:id="@+id/Picture_p"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/progress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_below="@id/Picture_p"
        android:orientation="horizontal"
        android:id="@+id/Vision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:textColor="#FFA07A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vision 1.0"
            android:textSize="22dp"/>
    </LinearLayout>


</RelativeLayout>
