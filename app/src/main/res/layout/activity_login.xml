<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context="com.example.codetribe.reportcard.Login">

    <LinearLayout
        android:layout_marginTop="140dp"
        android:id="@+id/Login_text"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/Login_text_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:clickable="true"
            android:text="Login"
            android:textColor="#FF6347"
            android:textColorLink="#FF00FF"
            android:textSize="28sp"
            android:onClick="Login"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="28sp"
            android:clickable="true"
            android:textColor="#008080"
            android:textColorLink="#800080"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/Login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="100dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="140dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/Login_text"
        android:orientation="vertical"
        android:id="@+id/Login_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="22sp"
            />

        <EditText
            android:id="@+id/USERNAME"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            android:textSize="26sp"/>

        <TextView
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/PASSWORD"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:textSize="26sp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@id/Login_activity"
        android:orientation="horizontal"
        android:id="@+id/Waning_Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="100dp"
            android:id="@+id/Waning_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attempt Left"
            android:textSize="18sp"/>

        <TextView
            android:layout_marginLeft="100dp"
            android:id="@+id/Waning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF00FF"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:id="@+id/Button_group"
        android:layout_below="@id/Waning_Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="#32CD32"
            android:id="@+id/Login_Btn"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="199dp"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:onClick="Login"
            android:text="LOGIN"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/button"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginRight="100dp"
            android:onClick="Close"
            android:text="EXIT"
            android:textColor="#800080"
            android:textSize="16dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/Button_group"
        android:layout_marginTop="30dp"
        android:id="@+id/Reset_Text"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Did you forgot password?"
            android:clickable="true"
            android:textSize="18sp"
            android:textColor="#9ACD32"
            android:onClick="Login"/>

        <ImageView
            android:layout_marginLeft="200dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
    </LinearLayout>


</RelativeLayout>
